{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RefSearch",
  "version": "0.1.0",
  "identifier": "com.andrwyoung.refsearch",
  "build": {
    "frontendDist": "../refsearch-ui/dist",
    "devUrl": "http://localhost:54998",
    "beforeDevCommand": "npm run dev --prefix ../refsearch-ui",
    "beforeBuildCommand": "npm run build --prefix ../refsearch-ui"
  },
  "app": {
    "windows": [
      {
        "title": "RefSearch",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": ["resources/backend/refsearch-backend"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
